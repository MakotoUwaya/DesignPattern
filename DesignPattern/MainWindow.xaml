<Window x:Class="DesignPattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesignPattern"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Content="StrategyTest" Click="StrategyTest_Click" 
                Margin="10,5"/>
        <Button Content="ObserverTest" Click="ObserverTest_Click" 
                Margin="10,5"/>
        <Button Content="DecoratorTest" Click="DecoratorTest_Click" 
                Margin="10,5"/>
        <Button Content="FactoryTest" Click="FactoryTest_Click" 
                Margin="10,5"/>
        <Button Content="SingletonTest" Click="Singleton_Click" 
                Margin="10,5"/>
        <Button Content="CommandTest" Click="Command_Click" 
                Margin="10,5"/>
        <Button Content="AdapterTest" Click="Adapter_Click" 
                Margin="10,5"/>
        <Button Content="FacadeTest" Click="Facade_Click" 
                Margin="10,5"/>
        <Button Content="TemplateMethodTest" Click="TemplateMethod_Click" 
                Margin="10,5"/>
        <Button Content="IteratorTest" Click="Iterator_Click" 
                Margin="10,5"/>
    </StackPanel>
</Window>
